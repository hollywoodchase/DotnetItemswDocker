@page
@model RazorPagesApp.Pages.Tasks.TasksModel
@{
    ViewData["Title"] = "Tasks";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Tasks</h2>

<form method="post">
    <div class="form-group">
        <label for="selectedUser">Assign To:</label>
        <select id="selectedUser" name="SelectedUser" asp-for="SelectedUser" class="form-control" required>
            <option value="">Select User</option>
            @foreach (var user in Model.UsersSelectList)
            {
                <option value="@user.Text">@user.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="taskName">Task Name:</label>
        <input type="text" id="taskName" name="TaskName" asp-for="TaskName" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


<br />

<table class="table">
    <thead>
        <tr>
            <th>Task #</th>
            <th>Assigned To</th>
            <th>Name of Task</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.TaskList)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.AssignedTo</td>
                <td>@task.Name</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
