@page
@model RazorPagesApp.Pages.Items.IndexModel
@{
    ViewData["Title"] = "Items";
}

<h2>Items</h2>

<form method="post">
    <input type="text" asp-for="NewItem.Name" placeholder="Add new item" />
    <button type="submit">Add Item</button>
</form>

<ul>
    @foreach (var item in Model.Items)
    {
        <li>@item.Name</li>
    }
</ul>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
