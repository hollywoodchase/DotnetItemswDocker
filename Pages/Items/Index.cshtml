@page
@model RazorPagesApp.Pages.Items.IndexModel
@{
    ViewData["Title"] = "Items";
}

<h2>Items</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="NewItem.Name"></label>
        <input class="form-control" type="text" asp-for="NewItem.Name" placeholder="Add new item" />
        <span asp-validation-for="NewItem.Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Item</button>
</form>

<table class="table mt-3">
    <thead>
        <tr>
            <th scope="col">Item #</th>
            <th scope="col">Item</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Id</td> <!-- Assuming 'Id' is the primary key of the Item model -->
                <td>@item.Name</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
